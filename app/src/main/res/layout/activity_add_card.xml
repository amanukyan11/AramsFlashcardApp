<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AddCardActivity"
    style="@style/RelativeLayout">

    <ImageView
        android:id="@+id/newActivity"
        android:layout_width="80dp"
        android:layout_height="66dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="29dp"
        android:src="@drawable/cancel_activity_foreground" />

    <ImageView
        android:id="@+id/saveActivity"
        android:layout_width="80dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="29dp"
        android:src="@drawable/save_activity_foreground" />

    <EditText
        android:id="@+id/new_question"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:hint="Enter the question here" />

    <EditText
        android:id="@+id/new_answer1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:hint="Enter the answer here"
        android:layout_below="@id/new_question"/>
</RelativeLayout>